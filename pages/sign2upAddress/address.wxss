/* pages/sign2upAddress/address.wxss */
page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
.container {
  width: calc(100% - 80rpx);
  height: 100%;
  overflow: hidden;
  padding: 0;
  margin: 0 40rpx;
} 
.main{width: 100%;}
.placeholder_class{font-size: 24rpx;color: #999999;text-align: left;}
.search{width: 670rpx;height: 96rpx;margin: 60rpx 0;border-radius: 50rpx;display: flex;justify-content: space-between;align-items: center;background-color: #f2f2f2;}
.search image{width: 48rpx;height: 48rpx;margin-left: 40rpx;margin-right: 20rpx;}
.select{border-bottom: 1px solid #f2f2f2;display: flex;justify-content: flex-start;align-items: center;margin: 20rpx;border-top:1px solid #f3f3f3;padding: 10px 0;}
.select text{font-size: 28rpx;color:#666666;background-color: #f2f2f2;text-align: center;height: 60rpx;line-height: 60rpx;margin-right: 20rpx;width: 100rpx;}
.scroll-view-h{width: 100%;height: 750rpx;display: flex;flex-direction: column;}
.scroll-view-h text{height: 80rpx;text-align: left;line-height: 80rpx;color: #333333;font-size: 28rpx;border-bottom: 1px solid #f3f3f3;display: inline-block;width: 100%;margin-left: 20rpx;}
