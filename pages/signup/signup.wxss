.placeholder_class{color:#ffffff;}
.ipt{margin-left:20rpx;color:#ffffff;width: 400rpx;margin-right: 30rpx;float: left;}
.border{border:1.5rpx solid #a0d8ef;display: flex;justify-content: space-between;}
.btn{width: 100%;display: flex;justify-content: center;align-items: center;font-size: 30rpx;color:#ffffff;margin-bottom: 40rpx;}
.btn text{width: 220rpx;text-align: center;border-radius: 35rpx;height: 64rpx;line-height: 64rpx;}
.camera{width: 100%;height:100%;position: relative;top:0;left: 0;background-color: #ffffff;}
.camera cover-image{border-radius: 50%;position: absolute;}
.picker{display: inline-flex;justify-content: space-between;align-items: center;}
.input-item{width: 561rpx;height: 72rpx;color: #ffffff;border-radius: 35rpx;margin-bottom: 32rpx;display: flex;justify-content:flex-start;flex-direction: row;align-items: center;}
.bjt{width: 26rpx;height: 14rpx;margin-top: 20rpx;}