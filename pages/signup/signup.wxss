/* pages/signup/signup.wxss */
.sign-top{width: 100%;height: 212rpx;background-color: #a0d8ef;border-radius: 0 0 40% 40%;}
.main{width: 690rpx;background-color: #fcfaf5;border-radius: 20rpx;margin: -92rpx 30rpx 0 30rpx;display: flex;justify-content: center;align-items: center;flex-direction: column;}
.face{width: 212rpx;height: 212rpx;border-radius: 50%;display: flex;justify-content: center;align-items: center;background-color: #ffffff;margin-top: -120rpx;}
.face-circle{width: 170rpx;height: 170rpx;position: relative;display: flex;justify-content: center;align-items: center;}
.face-circle .avatar{width: 100%;height: 100%;border-radius: 50%;}
.face-circle .avatar-cm{width: 51rpx;height: 44rpx;position: absolute;right: -20rpx;}
.form{display: flex;justify-content: center;align-items: center;flex-direction: column;margin: 32rpx auto 0 auto;font-size: 28rpx;color:#333333;}
