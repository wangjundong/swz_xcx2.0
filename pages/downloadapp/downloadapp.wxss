.root{
  background-color: #a0d8ef;
  position: fixed;
  height: 100%;
  width: 100%;
}
.cloud1{
  position: absolute;
  width: 101rpx;
	height: 69rpx;
	right: 0;
  top: 168rpx;
}
.cloud2{
  position: absolute;
  width: 82rpx;
	height: 69rpx;
	left: 0;
  bottom: 300rpx;
}
.city{
  position: absolute;
  width: 750rpx;
	height: 202rpx;
